<div class="container">
  <div class="row">
    <div class="col-10 mx-auto my-5">
      <h3>タイトル一覧</h3>
    </div>
  </div>
  
  <div class="row">
    <div class="col-8 mx-auto">
      <%= link_to "タイトル新規作成",new_admin_game_title_path,class:"mr-0" %>
      <table class="table table-bordered">
        <thead class="table-dark">
          <th style="width:25%">画像</th>
          <th style="width:25%">タイトル</th>
          <th colspan="3"style="width:50%">公開ステータス（仮）</th>
         
        </thead>
        <% @game_titles.each do |game_title| %>
        <tr>
          <td><%= image_tag game_title.game_title_image%></td>
          <td><%= game_title.title %></td>
          <td colspan="2">仮</td>
          <td>
            <%= link_to "編集",edit_admin_game_title_path(game_title),class:"btn btn-outline-success mx-5" %>
            <%= link_to "削除",admin_game_title_path(game_title),method: :delete,data: {confirm: "タイトルを削除するとそのタイトルに関するユーザーの戦歴なども削除されます。本当に削除しますか？"},class:"btn btn-outline-danger ml-5" %>
          </td>
          
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>