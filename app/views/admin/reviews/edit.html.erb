<div class="container">
  <div class="row">
    <div class="col-8 mx-auto mt-2">
      <%= form_with model: @review,url: admin_review_path(@review),method: :patch  do |f| %>
        <div class="row mx-auto">
          <div class="col-md-4 col-sm-4 mt-4">タイトル</div>
          <div class="col-md-6 col-sm-8 mt-4"><%= f.text_field :title, placeholder:"タイトルを入力してください",class:"form-control" %></div>
        </div>
          
        <div class="row mx-auto">
          <div class="col-md-4 col-sm-4 mt-4">レビュー</div>
          <div class="col-md-6 col-sm-8 mt-4"><%= f.text_area :body, placeholder:"レビューを入力してください",class:"form-control" %></div>
        </div>
        
        <div class="row mx-auto">
          <div class="col-md-4 col-sm-4 mt-4">確認ステータス</div>
          <div class="col-md-6 col-sm-8 mt-4">
            <%= f.radio_button :is_settled, :false %><%= f.label :is_settled_false,"未確認" %>
            <%= f.radio_button :is_settled, :true %><%= f.label :is_settled_true,"確認済み" %>
          </div>
        </div>
          
        <div class="row mx-auto">
          <div class="col-md-4 col-sm-4 mt-4"></div>
          <div class="col-md-6 col-sm-8 mt-4"><%= f.submit "更新する" ,class:"btn btn-success"%></div>
        </div>
        <% end %>
    </div>
  </div>
</div>