<div class="container">
  <div class="row">
    <div class="col-8 mx-auto mt-5">
      <% if @customers.exists? %>
          <table class="table">
            <thead class="table-dark">
              <tr>
                <th>名前</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
        <% @customers.each do |customer| %>
              <tr>
                <td><h3><%= customer.name %></h3></td>
                <td>フォロー数: <%= customer.followings.count %></td>
                <td>フォロワー数: <%= customer.followers.count %></td>
                <td><%= link_to "詳細を見る",customer_path(customer),class:"btn btn-outline-success" %></td>
              </tr>
            </tbody>
            <% end %>
          </table>
        
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>