<h3>レビュー一覧</h3>
<div class="container">
  <div class="row">
    <div class="col-8 mx-auto">
      <% @reviews.each do |review| %>
        <div class="row">
          <%= review.customer.name %>
        </div>
        <div class="row">
          <%= review.score %>
        </div>
        <div class="row h4">
          <%= review.title %>
        </div>
        <div class="row">
          <%= review.body %>
        </div>
      <% end %>
    </div>
  </div>
</div>