<div class="container">
  <div class="row">
    <div class="col-8 mx-auto mt-2">
      <%= form_with model: @request,url: requests_path,method: :post  do |f| %>
        <div class="row mx-auto">
          <div class="col-md-4 col-sm-4 mt-4">タイトル</div>
          <div class="col-md-6 col-sm-8 mt-4"><%= f.text_field :title, placeholder:"タイトルを入力してください",class:"form-control" %></div>
        </div>
          
        <div class="row mx-auto">
          <div class="col-md-4 col-sm-4 mt-4">理由(必須ではありません)</div>
          <div class="col-md-6 col-sm-8 mt-4"><%= f.text_area :body, placeholder:"理由を入力してください",class:"form-control" %></div>
        </div>
        
        <div class="row mx-auto">
          <div class="col-md-4 col-sm-4 mt-4"></div>
          <div class="col-md-6 col-sm-8 mt-4"><%= f.submit "送信する" ,class:"btn btn-success"%></div>
        </div>
        
        <% end %>
    </div>
  </div>
</div>